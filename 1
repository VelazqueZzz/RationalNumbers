#include<iostream>
using namespace std;

int objCount = 0;

class Rational
{
private:
	int num, den;
public:
	Rational(int num = 0, int den = 1)// construct che and zna
	{
		objCount += 1;
	}

	~Rational()
	{
		objCount -= 1;
	}
	void Set(int x, int y)// ustanavlivaem che and zna
	{
		num = x;
		den = y;
	}
	void print()// vivod x / y
	{
		if (num == 0 || den == 0) {}
		else
		{
			cout << num << "/" << den << endl;
		}
	}
	double ToDec()// desyatichnie
	{
		double dec = num / den;
		return dec;
	}
	void simple()
	{
		int temp;
		int x = num, y = den;
		while (temp = x % y)
		{
			x = y;
			y = temp;
		}
		den /= y;
		num /= y;
		if (den < 0) {
			den = -den;
			num = -num;
		}
	}
	Rational plus(const Rational& r1, const Rational& r2)
	{
		Rational r;
		r.num = r1.num * r2.den + r2.num * r1.den;
		r.den = r1.den * r2.den;
		r.simple();
		return r;
	}

	Rational sub(const Rational& r1, const Rational& r2)
	{
		Rational r;
		r.num = r1.num * r2.den - r2.num * r1.den;
		r.den = r1.den * r2.den;
		r.simple();
		return r;
	}

	Rational mult(const Rational& r1, const Rational& r2)
	{
		Rational r;
		r.num = r1.num * r2.num;
		r.den = r1.den * r2.den;
		r.simple();
		return r;
	}

	Rational div(const Rational& r1, const Rational& r2)
	{
		Rational r;
		if (r2.num == 0 || r2.den == 0)
		{
			cout << " <0 " << endl;
		}
		else {
			r.num = r1.num * r2.den;
			r.den = r2.num * r1.den;
		}
		r.simple();
		return r;
	}
};
int main()
{
	Rational r1, r2;
	Rational r;
	int num1, den1, num2, den2;

	cout << "che and zna cherez probel" << endl;
	cin >> num1 >> den1;
	r1.Set(num1, den1);
	r1.print();

	cout << "che2 and zna2 cherez probel" << endl;
	cin >> num2 >> den2;
	r2.Set(num2, den2);
	r2.print();

	cout << " plus" << endl;

	r = r.plus(r1, r2);
	r.print();
	cout << "minus" << endl;
	r = r.sub(r1, r2);
	r.print();
	cout << "umnozhenie" << endl;
	r = r.mult(r1, r2);
	r.print();
	cout << "delenie" << endl;
	r = r.div(r1, r2);
	r.print();
	return 0;
}
